<?xml version="1.0" encoding="UTF-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="?attr/source_bg"
		android:orientation="vertical" >
		<LinearLayout
				android:id="@+id/content"
				android:layout_width="fill_parent"
				android:layout_height="0dp" 
				android:layout_weight="1" 
				android:orientation="vertical">
			<TextView
			    android:id="@+id/read_date"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center"
				android:textSize="70px"
				android:textColor="#000000"
				android:layout_marginLeft="10dip"/>
			<TextView
			    android:id="@+id/read_content"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="70px"
				android:layout_marginLeft="10dip"
				android:textColor="?attr/gray_3_double"
				android:scrollbars="vertical"
                android:fadeScrollbars="false"/>

		</LinearLayout>
		
		<RelativeLayout
		    android:layout_width="match_parent"  
		    android:gravity="bottom"
		    android:layout_height="60dp">  
		    
		    <Button   
		        android:id="@+id/item_before"  
		        android:layout_marginTop="7dp"
		        android:layout_height="40dp"  
		        android:background="@drawable/before"
		        android:layout_width="40dp"  
		        android:layout_toLeftOf="@+id/item_delete"   /> 
		    <Button   
		        android:id="@+id/item_delete"  
		        android:layout_marginTop="2dp"
		        android:layout_height="50dp"  
		        android:background="@drawable/delete"
		        android:layout_marginLeft="7dp"
		        android:layout_width="50dp"  
		        android:layout_toLeftOf="@+id/item_write"   /> 
		    <Button   
		        android:id="@+id/item_write"  
		        android:background="@drawable/update"
		        android:layout_height="55dp"  
		        android:layout_width="55dp"  
		        android:layout_toLeftOf="@+id/item_next"  /> 
		    <Button   
		        android:id="@+id/item_next"  
		        android:background="@drawable/after"
		        android:layout_height="40dp"  
		        android:layout_width="40dp"
		        android:layout_marginRight="15dp"  
		        android:layout_marginTop="7dp"
		        android:layout_marginLeft="5dp"
		        android:layout_alignParentRight="true"  /> 
		      
		</RelativeLayout>

	</LinearLayout>